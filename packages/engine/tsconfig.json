{
  "compilerOptions": {
    "module": "CommonJS",
    "types": ["jest"],
    "sourceMap": true,
    "target": "ES2018",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "esModuleInterop": true,

    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "references": [{ "path": "../types" }]
}
