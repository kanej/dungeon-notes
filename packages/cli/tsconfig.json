    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "ts-node": {
    "files": true
  },
  "files": ["src/libs.d.ts"],
  "exclude": ["**/node_modules/**", "../../node_modules"],
  "composite": true,
  "references": [{ "path": "../engine" }, { "path": "../types" }]
}
