{
  "autorun": true,
  "terminals": [
    {
      "name": "Web",
      "description": "The front end UI",
      "focus": false,
      "cwd": "packages/web",
      "command": "BROWSER=none yarn start"
    },
    {
      "name": "Graphql",
      "description": "The graphql backend",
      "focus": false,
      "cwd": "packages/cli",
      "command": "yarn dev"
    },
    {
      "name": "Chrome",
      "description": "Run Chrome with remote debugging enabled",
      "focus": false,
      "open": false,
      "command": "sleep 5 && /Applications/Google\\ Chrome.app/Contents/MacOS/Google\\ Chrome --remote-debugging-port=9222 --disable-infobars --pinned-tab-count=2 http://localhost:3000 http://localhost:9898/graphql"
    }
  ]
}
